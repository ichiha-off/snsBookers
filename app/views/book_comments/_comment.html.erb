<h2><%= comments.count %>件のコメント</h2>

<table class = "table">
    <% comments.each do |comments| %>
        <tr>
            <td>
                <%= link_to user_path(comments.user) do %>
                    <%= attachment_image_tag comments.user, :profile_image, size: "50x50", alt: "profile_image", fallback: "no_image_square.jpg"  %>
                <% end %>
            </td>
            <td>
                <%= comments.comment %>
            </td>
            <% if comments.user.id == current_user.id %>
            <td>
                <%= button_to book_book_comment_path(comments.book, comments), method: :delete, remote: true, class: "btn btn-danger pull-right" do %>
                消去
                <% end %>
            </td>
            <% end %>
        </tr>
    <% end %>
</table>