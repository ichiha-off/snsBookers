<% if @book.errors.any? %>
  <div id="error_explanation">
      <h3><%= pluralize(@book.errors.count, "error") %> prohibited this obj from being saved:</h3>
      <ul>
          <% @book.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
          <% end %>
      </ul>
  </div>
<% end %>
<div class="row">
<div class = "col-xs-3">
    <%= render 'users/user_info', user: @user, book: @book %>
</div>
<div class = "col-xs-9">
    <h2>Books</h2>
    <table class = "table table-hover table-inverse">
        <thead>
            <tr>
                <th></th>
                <th>Title</th>
                <th>Opinion</th>
                <th colspan="3"></th>
            </tr>
        </thead>
        <tbody>
            <% @books.each do |book| %>
                <tr>
                    <td><%= attachment_image_tag @user, :profile_image, size: "40x40", class: "attachment user profile_image", alt: "profile_image", fallback: "no_image_square.jpg" %></td>
                    <td><%= link_to book.title, book_path(book) %></td>
                    <td><%= book.body %></td>
                </tr> 
            <% end %>
        </tbody>
    </table>
</div>
</div>